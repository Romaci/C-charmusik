{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": "/usr/bin/g++",
        "args": [
          "-std=c++20",
          "${file}",
          "-o",
          "${fileDirname}/a.out",
          "-I/usr/local/opt/sfml/include",
          "-L/usr/local/opt/sfml/lib",
          "-lsfml-graphics",
          "-lsfml-window",
          "-lsfml-system"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Generando archivo ejecutable con g++"
      }
    ]
  }
  